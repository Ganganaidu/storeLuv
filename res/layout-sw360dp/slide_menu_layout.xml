<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_storluv_background"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/profile_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginTop="25dp"
        android:orientation="vertical" >

        <com.thisisswitch.storelove.widgets.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/slidemenu_imageView1"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/app_name"
            android:background="@drawable/storluv_sidebar_profile"
            app:border_color="@color/white"
            app:border_width="2dp" />

        <com.thisisswitch.storelove.fonts.Textview_bold
            android:id="@+id/slidemenu_username_textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:text="@string/username"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <com.thisisswitch.storelove.fonts.Textview_bold
            android:id="@+id/view_profile_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:text="@string/viewprofile"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>

    <ListView
        android:id="@+id/slidemenu_listView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:background="@null"
        android:cacheColorHint="#00000000"
        android:divider="@color/black"
        android:dividerHeight="1dp" >
    </ListView>

</LinearLayout>